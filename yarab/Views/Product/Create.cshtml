                 <option selected disabled>Select...</option>
             </select>
         </div>
 *@
       


        <div>
            <button type="submit" class="btn btn-primary mt-1">Add</button>
            <a asp-controller="Product" asp-action="GetIndexView">Back to List</a>
        </div>
    </form>

    <div class="col-4">
        <img src="" id="empImage" style="object-fit:contain" />
    </div>

</div>

