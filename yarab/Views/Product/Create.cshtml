@model Product

<div class="row">
    <form class="col-4" method="post" asp-controller="Product" asp-action="AddNew" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            @*<label>@Html.DisplayNameFor(e=>e.FullName)</label>*@
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            @*<label>@Html.DisplayNameFor(e=>e.Position)</label>*@
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div>
            @*<label>@Html.DisplayNameFor(e=>e.Salary)</label>*@
            <label asp-for="Price"></label>
            <input type="text" asp-for="Price" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div>
            @*<label>@Html.DisplayNameFor(e=>e.Salary)</label>*@
            <label asp-for="Category"></label>
            <input type="text" asp-for="Category" step="0.01" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div>
            @*<label>@Html.DisplayNameFor(e=>e.BirthDate)</label>*@
            <label asp-for="StockQuantity"></label>
            <input type="number" asp-for="StockQuantity" class="form-control" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>

       

      
