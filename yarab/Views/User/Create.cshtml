        <div>
            <button type="submit" class="btn btn-primary mt-1">Add</button>
            <a asp-controller="User" asp-action="GetIndexView">Back to List</a>
        </div>
    </form>

    <div class="col-4">
        <img src="" id="empImage" style="object-fit:contain" />
    </div>

</div>

